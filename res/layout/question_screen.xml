<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3DDE8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hobokentrivia.QuestionActivity" > 
    
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/ornghome"
        android:onClick="onHome" />
    
        
        <ImageButton
           android:id="@+id/controlMusic"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_marginRight="100dp"
           android:layout_alignParentTop="true"
           android:layout_alignParentRight="true"
           android:onClick="onSetMusic" />
          
        <TextView
		android:id="@+id/timer"
		android:text="Time Remaining: "
		android:textSize="20dp"
		android:textColor="#616161"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_marginRight="50dp"
		android:layout_toRightOf="@+id/imageButton" />
        
         
                       
  <ImageView
         android:id="@+id/imageView1"
         android:layout_width="150dp"
         android:layout_height="140dp"
         android:layout_alignLeft="@+id/imageButton"
         android:layout_alignRight="@+id/LinearLayout1"
         android:layout_below="@+id/textView1"
         android:src="@drawable/questionholder" /> 

  <TextView
      android:id="@+id/textView1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageButton"
      android:layout_centerHorizontal="true"
      android:text="Question 1"
	  android:textColor="#009688"
      android:textSize="30dp" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="250dp"
      android:layout_height="70dp"
      android:layout_below="@+id/textView1"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:layout_centerVertical="true"
      android:gravity="center"
      android:textColor="#616161"
      android:textSize="15sp" />
        
 
                
     <LinearLayout
         android:id="@+id/LinearLayout1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_above="@id/button1"
         android:layout_below="@id/textView2"
         android:layout_centerHorizontal="true"
         android:layout_centerInParent="true"
         android:layout_marginTop="25dp"
         android:gravity="center"
         android:orientation="vertical"
         android:padding="5dp" >

 <Button
     android:id="@+id/button4"
     android:layout_width="fill_parent"
     android:layout_height="45dp"
     android:layout_above="@+id/button5"
     android:layout_below="@+id/button3"
     android:layout_marginBottom="10dp" 
     android:background="@drawable/button" 
     android:onClick="result"
     android:text="Choice3"
     android:textAllCaps="false"
     android:textSize="14dp"
     android:textColor="#FFFFFF"     
     android:width="200dp" />

 <Button
     android:id="@+id/button5"
     android:layout_width="fill_parent"
     android:layout_height="45dp"
     android:layout_above="@+id/button1"
     android:layout_below="@+id/button4"
     android:layout_marginBottom="10dp"
     android:textSize="14dp"
     android:background="@drawable/button" 
     android:onClick="result"
     android:text="Choice 4"     
     android:textColor="#FFFFFF" />


 <Button
     android:id="@+id/button3"
     android:layout_width="fill_parent"
     android:layout_height="45dp"
     android:layout_above="@+id/button4"
     android:layout_below="@+id/button2"
     android:layout_marginBottom="10dp"
     android:background="@drawable/button" 
     android:textSize="14dp"
     android:onClick="result"
     android:text="Choice2"     
     android:textColor="#FFFFFF" />

 <Button
     android:id="@+id/button2"
     android:layout_width="fill_parent"
     android:layout_height="45dp"
     android:layout_above="@+id/button3"
     android:layout_below="@+id/textView2"
     android:layout_marginBottom="10dp"
     android:background="@drawable/button" 
     android:textSize="14dp"
     android:onClick="result"
     android:text="Choice1"
     android:textColor="#FFFFFF" />
 
 </LinearLayout>         

 	  <Button
     android:id="@+id/button1"
     android:layout_width="120dp"
     android:layout_height="60dp"
     android:layout_alignParentBottom="true"
     android:layout_centerHorizontal="true"
     android:layout_marginBottom="30dp"
     android:background="@drawable/button"
     android:onClick="OnClickNextQuestion"
     android:text="Next Question"
     android:textSize="15sp"
     android:textColor="#FFFFFF" />
  
  <Button
     android:id="@+id/button6"
     android:layout_width="120dp"
      android:layout_height="60dp"
     android:layout_alignParentBottom="true"
     android:layout_centerHorizontal="true"
     android:layout_marginBottom="30dp"
     android:background="@drawable/button"
     android:onClick="score"
     android:textSize="15sp"
     android:text="View Score"
     android:textColor="#FFFFFF" /> 
     
     <Button
     android:id="@+id/button7"
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
     android:layout_marginBottom="10dp"
     android:background="@drawable/button" 
     android:onClick="pause"
     android:text="Pause"
     android:textColor="#FFFFFF" />
     
     <Button
     android:id="@+id/button8"
     android:layout_width="80dp"
     android:layout_height="40dp"
     android:layout_alignParentTop="true"
     android:layout_alignParentRight="true"
     android:layout_alignParentEnd="true"
     android:layout_marginBottom="10dp"
     android:background="@drawable/button" 
     android:onClick="resume"
     android:text="Resume"
     android:textColor="#FFFFFF" />

     <Button
         android:id="@+id/fifty_fifty"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/button1"
         android:layout_alignBottom="@+id/button1"
         android:layout_toRightOf="@+id/textView1"
         android:onClick="fiftyFifty"
         android:text="fifty-fifty" />

     <ImageView
         android:id="@+id/coinmeter"
         android:layout_width="100dp"
         android:layout_height="60dp"
         android:layout_alignLeft="@+id/LinearLayout1"
         android:layout_alignParentBottom="true"
         android:layout_alignTop="@+id/coinscounter"
         android:src="@drawable/coinsmeter" />

     <TextView
         android:id="@+id/coinscounter"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/timer"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="18dp" />
         
          <Button
         android:id="@+id/button9"
         android:layout_width="80dp"
         android:layout_height="40dp"
         android:layout_above="@+id/imageView1"
         android:layout_below="@+id/button7"
      
     android:layout_alignParentRight="true"
     android:layout_alignParentEnd="true"
         android:background="@drawable/button"
         android:textColor="#FFFFFF" 
         android:onClick="exit"
         android:text="Exit" />

</RelativeLayout>
