<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44a1f2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hobokentrivia.QuestionActivity" > 
    
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/ornghome"
        android:onClick="onHome" />
    
        
        <ImageButton
           android:id="@+id/controlMusic"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_marginRight="100dp"
           android:layout_alignParentTop="true"
           android:layout_alignParentRight="true"
           android:onClick="onSetMusic" />
          
        <TextView
		android:id="@+id/timer"
		android:text="Time Remaining: "
		android:textSize="20dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_marginRight="50dp"
		android:layout_toRightOf="@+id/imageButton"
		 />
                
     <LinearLayout
         android:id="@+id/LinearLayout1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_above="@id/button1"
         android:layout_below="@id/textView2"
         android:layout_centerHorizontal="true"
         android:layout_centerInParent="true"
         android:gravity="center"
         android:orientation="vertical"
         android:padding="5dp" >

 <Button
     android:id="@+id/button4"
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:layout_above="@+id/button5"
     android:layout_below="@+id/button3"
     android:layout_marginBottom="10dp" 
     android:background="@drawable/button" 
     android:onClick="result"
     android:text="Choice3"
     android:textAllCaps="false"
     android:textColor="#FFFFFF"     
     android:width="200dp" />

 <Button
     android:id="@+id/button5"
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:layout_above="@+id/button1"
     android:layout_below="@+id/button4"
     android:layout_marginBottom="10dp"
     android:background="@drawable/button" 
     android:onClick="result"
     android:text="Choice 4"     
     android:textColor="#FFFFFF" />


 <Button
     android:id="@+id/button3"
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:layout_above="@+id/button4"
     android:layout_below="@+id/button2"
     android:layout_marginBottom="10dp"
     android:background="@drawable/button" 
     android:onClick="result"
     android:text="Choice2"     
     android:textColor="#FFFFFF" />

 <Button
     android:id="@+id/button2"
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:layout_above="@+id/button3"
     android:layout_below="@+id/textView2"
     android:layout_marginBottom="10dp"
     android:background="@drawable/button" 
     android:onClick="result"
     android:text="Choice1"
     android:textColor="#FFFFFF" />
 
 </LinearLayout>
           
  <ImageView
         android:id="@+id/imageView1"
         android:layout_width="150dp"
         android:layout_height="150dp"
         android:layout_marginTop="7dp"
         android:layout_alignLeft="@+id/imageButton"
         android:layout_alignRight="@+id/LinearLayout1"
         android:layout_below="@+id/timer"
         android:src="@drawable/questionholder" /> 

  <TextView
      android:id="@+id/textView1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageButton"
      android:layout_centerHorizontal="true"
      android:text="Question 1"
      android:layout_marginTop="9dp"
       android:textColor="#008BFF"
      android:textSize="30dp" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="250dp"
      android:layout_height="70dp"
      android:layout_below="@+id/textView1"
      android:layout_centerHorizontal="true"
        android:textColor="#ff444444"
      android:gravity="center"
      android:textSize="15sp" />

 	  <Button
     android:id="@+id/button1"
     android:layout_width="120dp"
      android:layout_height="50dp"
     android:layout_alignParentBottom="true"
     android:layout_centerHorizontal="true"
     android:layout_marginBottom="30dp"
     android:background="@drawable/button"
     android:onClick="OnClickNextQuestion"
     android:text="Next Question"
     android:textSize="14sp"
     android:textColor="#FFFFFF" />
  <Button
     android:id="@+id/button6"
     android:layout_width="120dp"
      android:layout_height="50dp"
     android:layout_alignParentBottom="true"
     android:layout_centerHorizontal="true"
     android:layout_marginBottom="30dp"
     android:background="@drawable/button"
     android:onClick="score"
     android:textSize="14sp"
     android:text="View Score"
     android:textColor="#FFFFFF" /> 
     
     <Button
     android:id="@+id/button7"
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
     android:layout_marginBottom="10dp"
     android:background="@drawable/button" 
     android:onClick="pause"
     android:text="Pause"
     android:textColor="#FFFFFF" />
     
     <Button
     android:id="@+id/button8"
     android:layout_width="80dp"
     android:layout_height="40dp"
     android:layout_alignParentTop="true"
     android:layout_alignParentRight="true"
     android:layout_alignParentEnd="true"
     android:layout_marginBottom="10dp"
     android:background="@drawable/button" 
     android:onClick="resume"
     android:text="Resume"
     android:textColor="#FFFFFF" />


</RelativeLayout>
